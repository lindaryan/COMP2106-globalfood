<h1>About the Global Food Market</h1>
<p>Our Market has great food representing many countries:</p>
{{#if user }}
    <a href="/countries/add">Add a New Country</a>
{{/if}}

<table class="table table-striped table-hover">
    <thead>
    <th>Name</th>
    <th></th>
    </thead>

    {{#each countries}}
        <tr>
            <td>
                <!-- we are inside the foods loop so we need to prefix the top-level "user" variable with ../ -->
                {{#if ../user }}
                    <a href="/countries/edit/{{this._id}}">{{this.name}}</a>
                {{else}}
                    {{this.name}}
                {{/if}}
            </td>
            <td>
            {{#if ../user }}
                <a href="/countries/delete/{{this._id}}" class="text-danger" onclick="return confirmDelete();">Delete</a>
            {{/if}}
    </td>
        </tr>
    {{/each}}
</table>